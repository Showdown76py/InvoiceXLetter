[MASTER]
# A more indulgent configuration to reduce Pylint noise

[MESSAGES CONTROL]
disable=
    missing-module-docstring,
    missing-class-docstring,
    missing-function-docstring,
    invalid-name,
    too-many-branches,
    too-many-locals,
    broad-exception-raised,
    broad-exception-caught,
    line-too-long,
    import-error,
    wildcard-import,
    unspecified-encoding,
    wrong-import-order,
    redefined-outer-name,
    global-statement,
    consider-using-f-string

[FORMAT]
# Allow longer lines
max-line-length=120

[DESIGN]
# Increase thresholds for complexity
max-args=10
max-locals=25
max-branches=20
max-returns=10
max-parents=7

[BASIC]
# Allow variables with short names
good-names=i,j,k,ex,Run,_,id

[REPORTS]
# Disable the final score report
reports=no
